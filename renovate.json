{
  "extends": [
    "config:base",
    ":automergeMinor",
    ":automergeDigest"
  ],
  "enabledManagers": [
    "dockerfile",
    "gomod"
  ],
  "dockerfile": {
    "fileMatch": [
      "docker/Dockerfile\\.linux\\.(arm|arm64|amd64|multiarch)",
      "docker/Dockerfile\\.windows\\.(1809|ltsc2022)"
    ],
    "pinDigests": true
  },
  "gomod": {
    "postUpdateOptions": [
      "gomodTidy"
    ]
  },
  "labels": [
    "renovate"
  ]
}
